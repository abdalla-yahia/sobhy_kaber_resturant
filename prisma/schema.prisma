generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  address String?
  image String?
  gender Gender? @default(MALE)
  role   Role @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

enum Gender{
  MALE
  FEMALE
}

enum Role {
  USER
  ADMIN
}

model Local {
  id        String    @id @default(uuid())
  code      String    @unique 
  name      String? 
  flage     String
  translationsCat CategoryTranslation[]
  translationsMeal MealTranslation[]
}

model Category {
  id String @id @default(uuid())
  title String
  description String?
  image String?
  gallery String[]
  meals Meals[]
  translations CategoryTranslation[]
}

model CategoryTranslation {
  id          String       @id @default(uuid())
  name        String
  description String?

  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id])

  LocalId  String
  Local    Local  @relation(fields: [LocalId], references: [code])

  // @@unique([categoryId, LocalId]) 
}

model Meals {
  id String @id @default(uuid())
  title String
  slug String  @unique
  description String?
  price  Int
  quantity Int?
  offer  String?
  isFeature Boolean? @default(false)
  image  String?
  gallery String[]
  categoryId String
  category Category @relation(fields: [categoryId],references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  translations MealTranslation[]
}



model MealTranslation {
  id          String       @id @default(uuid())
  name        String
  description String?

  mealId  String
  meals    Meals  @relation(fields: [mealId], references: [id])

  LocalId  String
  Local    Local  @relation(fields: [LocalId], references: [code])

  // @@unique([mealId, LocalId]) 
}